{
  "name": "playwright-driver",
  "version": "1.0.0",
  "description": "W3C WebDriver that allows using Playwright through any WebDriver client",
  "author": "7una",
  "keywords": [
    "playwright",
    "appium",
    "driver"
  ],
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "scripts": {
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "build": "tsc",
    "test": "jest"
  },
  "engines": {
    "node": ">=18"
  },
  "appium": {
    "mainClass": "Driver",
    "driverName": "playwright",
    "automationName": "Playwright",
    "platformNames": [
      "chromium",
      "firefox",
      "webkit"
    ]
  },
  "dependencies": {
    "@appium/base-driver": "^9.0.0",
    "appium-support": "^2.55.0",
    "asyncbox": "^2.9.4",
    "base-64": "^1.0.0",
    "jszip": "^3.10.1",
    "playwright": "^1.40.0",
    "playwright-core": "^1.39.0",
    "requireg": "^0.2.2",
    "webdriverio": "^8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^3.0.0",
    "@appium/types": "^0.25.2",
    "@types/base-64": "^1.0.1",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "ts-jest": "^29.3.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0"
  }
}
